# Streamly - .env.example


# --- Database (SQL Server) ---
DB_HOST=localhost
DB_PORT=1433
DB_NAME=Streamly
DB_USER=sa
DB_PASS=yourStrong(!)Password
DB_ENCRYPT=true
DB_TRUST_SERVER_CERT=true

# --- VNPAY (Sandbox) ---
# Docs: https://sandbox.vnpayment.vn/apis/docs/
VNPAY_TMNCODE=VNPAY_SANDBOX
VNPAY_HASHSECRET=VNPAY_SANDBOX_SECRET
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
# Update host/port/context if different in your local Tomcat
VNPAY_RETURNURL=http://localhost:8080/Streamly/vnpay-return

# --- SMTP / Forgot Password ---
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
# Use an app-specific password (for Gmail) 
MAIL_PASSWORD=your_app_password
MAIL_FROM=Streamly <your_email@example.com>

